<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context="com.mobtech.fitx360.activity.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rltToolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/color_white">

                <ImageView
                    android:id="@+id/imgbtnDrawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:onClick="onClick"
                    android:padding="@dimen/toolbar_img_padding"
                    android:src="@drawable/ic_menu"
                    app:tint="@color/color_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/imgbtnDrawer"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="@string/app_name"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/toolbar_title_text" />

            </RelativeLayout>

            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="0.1mm"
                android:layout_below="@+id/rltToolbar"
                android:layout_margin="2dp"
                android:background="@color/color_gray" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcyWorkout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/viewLine"
                android:paddingBottom="@dimen/space_10dp"
                android:scrollbars="none" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>